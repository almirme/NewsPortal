@model NewsPortal.Models.NewsArticle

<div class="container">
    <div class="col-md-7">
        <h2>@Model.Title</h2>
        <p>@Model.PublishDate</p>
        <hr />
        <img class="img-fluid" style="max-width:100%; max-height:100%;" src="@Model.PictureUrl" alt="@Model.Title" />
        <div style="margin-top:20px"></div>
        <p>@Model.Content</p>
    </div>
</div>