@model NewsPortal.Models.NewsFormViewModel

<h2>Add News</h2>

@using (Html.BeginForm("Save", "NewsAdmin"))
{
    @Html.ValidationSummary(true, "Please fix the following errors.")
    <div class="form-group">
        @Html.LabelFor(m => m.NewsArticle.Title)
        @Html.TextBoxFor(m => m.NewsArticle.Title, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.NewsArticle.Title)
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.NewsArticle.Content)
        @Html.TextAreaFor(m => m.NewsArticle.Content, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.NewsArticle.Content)
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.NewsArticle.Category)
        @Html.DropDownListFor(m => m.NewsArticle.Category, new SelectList(Model.NewsCategories, "Name", "Name"), "Select news category", new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.NewsArticle.Category)
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.NewsArticle.PictureUrl)
        @Html.TextBoxFor(m => m.NewsArticle.PictureUrl, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.NewsArticle.PictureUrl)
    </div>

    @Html.HiddenFor(m => m.NewsArticle.Id)
    @Html.AntiForgeryToken()
    <button type="submit" class="btn btn-primary">Save</button>
}